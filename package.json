{
  "name": "website-remix",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix build",
    "dev": "remix dev --manual",
    "lint": "eslint . --fix --ignore-path .gitignore",
    "lint:nofix": "eslint . --ignore-path .gitignore",
    "start": "remix-serve ./build/index.js",
    "typecheck": "tsc"
  },
  "eslintConfig": {
    "extends": "ethang",
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "warn",
      "@typescript-eslint/explicit-module-boundary-types": "warn",
      "@typescript-eslint/no-magic-numbers": "off",
      "@typescript-eslint/prefer-readonly-parameter-types": "off",
      "complexity": "warn",
      "max-lines": "off",
      "max-lines-per-function": "off",
      "max-statements": "off",
      "no-console": "off",
      "react/display-name": "warn",
      "react/jsx-max-depth": "off",
      "react/jsx-no-bind": "warn",
      "react/jsx-no-literals": "off"
    }
  },
  "dependencies": {
    "@ethang/hooks": "^1.5.26",
    "@ethang/toolbelt": "^1.1.1",
    "@ethang/use-form": "^1.6.53",
    "@faker-js/faker": "^8.4.1",
    "@heroicons/react": "^2.1.1",
    "@nextui-org/react": "^2.2.9",
    "@remix-run/css-bundle": "^2.7.2",
    "@remix-run/node": "^2.7.2",
    "@remix-run/react": "^2.7.2",
    "@remix-run/serve": "^2.7.2",
    "@sanity/client": "^6.14.3",
    "@sanity/image-url": "^1.0.2",
    "color-convert": "^2.0.1",
    "convert": "^5.0.0",
    "framer-motion": "^11.0.6",
    "isbot": "^5.1.0",
    "lodash": "^4.17.21",
    "luxon": "^3.4.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-syntax-highlighter": "^15.5.0",
    "react-toastify": "^10.0.4",
    "tailwind-merge": "^2.2.1",
    "ua-parser-js": "^1.0.37",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@ethang/project-builder": "^1.1.25",
    "@remix-run/dev": "^2.7.2",
    "@remix-run/eslint-config": "^2.7.2",
    "@types/color-convert": "^2.0.3",
    "@types/lodash": "^4.14.202",
    "@types/luxon": "^3.4.2",
    "@types/react": "^18.2.58",
    "@types/react-dom": "^18.2.19",
    "@types/react-syntax-highlighter": "^15.5.11",
    "@types/ua-parser-js": "^0.7.39",
    "@types/uuid": "^9.0.8",
    "eslint": "^8.57.0",
    "eslint-config-ethang": "^14.0.11",
    "tailwindcss": "^3.4.1",
    "type-fest": "^4.10.3",
    "typescript": "^5.3.3",
    "vite": "^5.1.4"
  }
}
